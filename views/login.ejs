<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Temple Corporate Login</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    html, body {
      width: 100vw;
      height: 100vh;
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      width: 100vw;
      height: 100vh;
      overflow: hidden;
      font-family: 'Segoe UI', 'Roboto', Arial, sans-serif;
      background: #181a22;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .bg-gallery {
      position: fixed;
      inset: 0;
      z-index: 1;
      overflow: hidden;
    }
    .bg-slide {
      position: absolute;
      inset: 0;
      width: 100vw;
      height: 100vh;
      object-fit: cover;
      opacity: 0;
      transition: opacity 1.5s cubic-bezier(.87,.11,.35,1.12);
      will-change: opacity;
    }
    .bg-slide.active {
      opacity: 1;
      z-index: 2;
    }
    .bg-tint {
      position: absolute;
      inset: 0;
      background: linear-gradient(120deg, rgba(23,23,40,0.45) 30%, rgba(40,27,39,0.73) 90%);
      z-index: 5;
      pointer-events: none;
    }

    .login-container {
      position: relative;
      z-index: 10;
      width: 410px;
      max-width: 94vw;
      background: rgba(255,255,255,0.11);
      box-shadow: 0 8px 48px 0 rgba(26,13,40,0.20);
      border-radius: 18px;
      padding: 40px 30px 32px 30px;
      display: flex;
      flex-direction: column;
      align-items: center;
      backdrop-filter: blur(22px) brightness(1.06);
      border: 1.6px solid rgba(255,255,255,0.13);
      animation: drop-in 1.2s cubic-bezier(.48,.19,.6,.81) 0.1s backwards;
    }

    @keyframes drop-in {
      from { transform: translateY(60px) scale(.93); opacity: 0; }
      to   { transform: translateY(0) scale(1); opacity: 1; }
    }

    .login-logo {
      width: 64px;
      margin-bottom: 19px;
      filter: drop-shadow(0 3px 12px #ed992577);
      border-radius: 12px;
      background: rgba(255,255,255,0.38);
      padding: 4px;
    }
    .login-title {
      color: #fff;
      font-size: 2rem;
      font-weight: 600;
      margin-bottom: 5px;
      text-shadow: 0 2px 16px #23071044;
      letter-spacing: 1.3px;
    }
    .login-tagline {
      color: #ffe1a8;
      font-size: 1.12rem;
      margin-bottom: 24px;
      letter-spacing: .04em;
    }
    .login-date {
      color: #ffeecc;
      font-size: 1rem;
      text-align: center;
      margin-bottom: 25px;
      font-family: 'Segoe UI Mono', Menlo, monospace;
      letter-spacing: .13em;
      user-select: text;
      text-shadow: 0 1px 7px #40221880;
    }

    .login-form {
      width: 100%;
      display: flex;
      flex-direction: column;
      gap: 14px;
      margin-bottom: 14px;
    }
    .login-form label {
      color: #ffd5a8;
      font-size: 1em;
      margin-bottom: 3px;
      margin-left: 2px;
      font-weight: 400;
      letter-spacing: .02em;
    }
    .login-input {
      border: 1.2px solid #fadbb8;
      background: rgba(255,255,255,0.13);
      color: #21203f;
      border-radius: 7px;
      padding: 12px;
      font-size: 1.08em;
      box-sizing: border-box;
      font-family: inherit;
      letter-spacing: .04em;
      outline: none;
      transition: border-color 0.24s, background 0.17s;
	  width: 100%;        
      padding-right: 36px
	  
	  
	  
    }
    .login-input:focus {
      border-color: #fdb63e;
      background: #ffffff33;
    }
    .form-row {
      display: flex;
      align-items: center;
      position: relative;
    }
    .form-row .toggle-pwd {
      position: absolute;
      right: 11px;
      top: 9px;
      background: none;
      border: none;
      color: #be8408;
      font-size: 1.25em;
      cursor: pointer;
      opacity: .70;
      padding:2px 4px;
      transition: opacity .13s;
    }
    .form-row .toggle-pwd:hover {
      opacity: 1;
    }

    .caps-warning {
      color: #e64f2d;
      font-size: .98em;
      margin-top: -10px;
      margin-bottom: 2px;
      display: none;
      letter-spacing: .04em;
    }

    .login-actions {
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-size: .99rem;
      margin-top: 2px;
      margin-bottom: 0;
    }
    .login-actions label {
      color: #ffeecd;
      cursor: pointer;
      font-size: .98em;
      font-weight: 400;
    }
    .login-actions a {
      color: #ffd197;
      text-decoration: none;
      font-weight: 500;
      font-size: .99em;
      transition: color .16s;
    }
    .login-actions a:hover {color: #fff7ea;}
    .login-btn {
      width: 100%;
      margin: 18px 0 0 0;
      padding: 12px;
      color: #fff;
      font-size: 1.13em;
      font-weight: 600;
      border-radius: 8px;
      letter-spacing: .08em;
      background: linear-gradient(90deg, #f4b02a 15%, #ef7642 85%);
      border: none;
      box-shadow: 0 2px 11px #dfa13d33;
      cursor: pointer;
      transition: background .16s, transform .12s;
    }
    .login-btn:active { transform: scale(.98);}
    .login-btn:hover {
      background: linear-gradient(91deg, #e79a1c 7%, #ea5d3d 93%);
      box-shadow: 0 3px 15px #f3c249aa;
    }
    .login-message {
      text-align: center;
      margin-top: 8px;
      color: #28b337;
      font-size: 1.03em;
      min-height: 18px;
    }
    .login-message.error { color: #da3349; }
    .login-footer {
      margin-top: 26px;
      color: #fff9e6aa;
      font-size: .97em;
      text-align: center;
      letter-spacing: .06em;
      text-shadow: 0 1px 8px #47322a37;
      user-select: none;
    }

    @media (max-width:700px){
      .login-container{
        width: 95vw;
        padding: 22px 1vw 16px 1vw;
        min-width: 0;
        margin: 0 2vw;
      }
      .login-title {
        font-size:1.13em;
      }
    }

    .gallery-dots {
      position: fixed;
      left: 50%;
      bottom: 30px;
      z-index: 18;
      transform: translateX(-50%);
      display: flex;
      gap: 9px;
      pointer-events: none;
    }
    .gallery-dot {
      width: 12px;
      height: 12px;
      border-radius: 50%;
      background: #ffc56d83;
      opacity: .7;
      transition: background .23s, opacity .20s;
      border: 1.5px solid #fff1ce95;
    }
    .gallery-dot.active {
      background: #fff9e1;
      opacity: 1;
      box-shadow: 0 2px 11px #fdb3215c;
    }
  </style>
</head>
<body>
  <!-- Animated Gallery Background -->
  <div class="bg-gallery">
    <img class="bg-slide active" src="https://images.unsplash.com/photo-1464983953574-0892a716854b?auto=format&fit=crop&w=1400&q=80" alt="Temple Night">
    <img class="bg-slide" src="https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=1400&q=80" alt="Cultural Festival">
    <img class="bg-slide" src="https://images.unsplash.com/photo-1500534314209-a25ddb2bd429?auto=format&fit=crop&w=1400&q=80" alt="Sunrise Mountain">
    <img class="bg-slide" src="https://images.unsplash.com/photo-1470770841072-f978cf4d019e?auto=format&fit=crop&w=1400&q=80" alt="Dawn Ceremony">
    <div class="bg-tint"></div>
  </div>

  <div class="gallery-dots">
    <div class="gallery-dot active"></div>
    <div class="gallery-dot"></div>
    <div class="gallery-dot"></div>
    <div class="gallery-dot"></div>
  </div>

  <div class="login-container">
    <img src="/img/logo.png"
         alt="Temple Logo" class="login-logo" loading="lazy">
    <div class="login-title">Sri Venkateshwara Temple          Mangalore</div>
    <div class="login-tagline">Welcome</div>
    <div class="login-date" id="loginDate"></div>
   <form class="login-form" autocomplete="off" method="POST" action="/login">

      <label for="username">Username</label>
      <input id="username" name="username" type="text" class="login-input" placeholder="Enter your Username" required>
      <label for="password">Password</label>
      <div class="form-row">
        <input id="password" name="password" type="password" class="login-input"
               placeholder="Enter password" required>
        <button type="button" class="toggle-pwd" onclick="togglePwd()" aria-label="Toggle password">&#128065;</button>
      </div>
      <div id="capsWarn" class="caps-warning">Caps Lock is ON</div>
      <div class="login-actions">
        <label><input type="checkbox" id="rememberMe" style="margin-right:4px;">Remember me</label>
        <a href="#">Forgot password?</a>
      </div>
      <button type="submit" class="login-btn">Log in</button>
      <div id="loginMsg" class="login-message"></div>
    </form>
    <div class="login-footer">
      &copy; 2025 Temple Corporation. All rights reserved.
    </div>
  </div>

  <script>
    // Gallery animation logic
    const slides = document.querySelectorAll('.bg-slide');
    const dots = document.querySelectorAll('.gallery-dot');
    let current = 0;
    function showSlide(n) {
      slides.forEach((slide, i) => {
        slide.classList.toggle('active', i === n);
        dots[i].classList.toggle('active', i === n);
      });
      current = n;
    }
    function nextSlide() {
      showSlide((current + 1) % slides.length);
    }
    setInterval(nextSlide, 5400);

    // Date and time (IST)
    function updateDate() {
      const now = new Date();
      const options = {
        weekday: 'long', year:'numeric', month:'long', day:'numeric',
        hour:'2-digit', minute:'2-digit', second:'2-digit',
        hour12: true, timeZone: 'Asia/Kolkata'
      };
      document.getElementById('loginDate').textContent =
        now.toLocaleString('en-IN', options) + ' IST';
    }
    setInterval(updateDate, 1000);
    updateDate();

    // Password show/hide
    function togglePwd() {
      const pwd = document.getElementById('password');
      pwd.type = pwd.type === 'password' ? 'text' : 'password';
    }
    // Caps Lock warning
    document.getElementById('password').addEventListener('keyup', function(e) {
      document.getElementById('capsWarn').style.display =
        e.getModifierState && e.getModifierState('CapsLock') ? 'block' : 'none';
    });

    // Form validation (no min password, redirect to dashboard.html)
    function validateLogin(e) {
      e.preventDefault();
      const user = document.getElementById('username').value.trim();
      const pass = document.getElementById('password').value;
      let error = "";
      if (!user) error = "Please enter your username.";
      else if (!pass) error = "Please enter your password.";
      const msg = document.getElementById('loginMsg');
      if (error) {
        msg.textContent = error;
        msg.className = "login-message error";
      } else {
        msg.textContent = "Login successful!";
        msg.className = "login-message";
        setTimeout(() => {
          window.location.href = "dashboard";
        }, 800);
      }
      return false;
    }
  </script>
</body>
</html>

